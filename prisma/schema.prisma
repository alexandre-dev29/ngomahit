// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  user_id        Int       @id @default(autoincrement())
  email          String    @unique
  firstName      String
  lastName       String?
  phoneNumber    String?   @unique
  username       String    @unique
  password       String
  status         String?
  user_role      String
  Token          Tokens?   @relation(fields: [tokensToken_id], references: [token_id])
  createdAt      DateTime?
  updatedAt      DateTime?
  tokensToken_id Int?
}

model Tokens {
  token_id Int    @id @default(autoincrement())
  token    String @db.LongText
  user_id  Int
  User     User[]
}
